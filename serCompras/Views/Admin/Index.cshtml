@model serCompras.Models.Counters
@{
    Layout = "~/Views/Shared/_LT_Admin.cshtml";
    ViewBag.Title = "Inicio";
}



<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card widget_2 big_icon traffic">
                <div class="body">
                    <h6>Provee. Activos</h6>
                    <h2>@Model.providersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card widget_2 big_icon sales">
                <div class="body">
                    <h6>Solicitudes</h6>
                    <h2>@Model.requestCount</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card widget_2 big_icon email">
                <div class="body">
                    <h6>Presupuestos</h6>
                    <h2>@Model.budgetsCount</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card widget_2 big_icon domains">
                <div class="body">
                    <h6>Nuevos Provee.</h6>
                    <h2>@Model.newprovidersCount</h2>
                </div>
            </div>
        </div>
    </div>
</div>