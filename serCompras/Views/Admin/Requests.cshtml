@model IEnumerable<serCompras.Views.request>
@{
    Layout = "~/Views/Shared/_LT_Admin.cshtml";
    ViewBag.Title = "Solicitudes";
}


<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">
        <div class="header">
            <h2><strong>Proveedores Registrados</strong></h2>
        </div>
        <div class="body">
            <div class="table-responsive">
                <table class="table table-hover rounded">
                    <thead>
                        <tr>
                            <th width="5%">ID</th>
                            <th>Responsable</th>
                            <th>Proposito</th>
                            <th>Fec. Limite</th>
                            <th>Fec. Creada</th>
                            <th>Estado</th>
                            <th width="10%">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.id_user</td>
                                <td>@item.purpose</td>
                                <td>@item.date_limit.ToString().Split(' ')[0]</td>
                                <td>@item.created_at</td>
                                <td>@(item.status == 1 ? "Activo" : "Inactivo")</td>
                                <td>
                                    <a class="btn btn-link text-primary" href="/Admin/Request/@item.id"><i class="fas fa-edit mr-1"></i></a>
                                    <a class="btn btn-link text-danger" href="/Admin/DeleteRequest/@item.id"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>