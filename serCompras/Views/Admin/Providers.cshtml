@model IEnumerable<serCompras.Models.Providers>
@{
    Layout = "~/Views/Shared/_LT_Admin.cshtml";
    ViewBag.Title = "Proveedores";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">
        <div class="header">
            <h2><strong>Proveedores Registrados</strong></h2>
        </div>
        <div class="body">
            <div class="table-responsive">
                <table class="table table-hover rounded">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Razon</th>
                            <th>RUT</th>
                            <th>Telefono</th>
                            <th>Direccion</th>
                            <th>Responsable</th>
                            <th>Estado</th>
                            <th width="10%">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var status =item.status == 0 ? "Registrado" :item.status == 1 ? "Revision" :item.status == 2 ? "Autorizado" :item.status == 3 ? "Inabilitado" : "Rechazado";

                            <tr>
                                <td>@item.id</td>
                                <td>@item.legal_name</td>
                                <td>@item.rut</td>
                                <td>@item.phone</td>
                                <td>@item.address</td>
                                <td>@item.fullname</td>
                                <td>@status</td>
                                <td>
                                    <a class="btn btn-link text-primary" href="/Admin/Provider/@item.id"><i class="fas fa-edit mr-1"></i></a>
                                    <a class="btn btn-link text-danger" href="/Admin/DeleteProvider/@item.id"><i class="fas fa-trash-alt"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>