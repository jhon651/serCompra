@model serCompras.Views.user
@{
    Layout = "~/Views/Shared/_LT_Admin.cshtml";
    ViewBag.Title = ViewBag.titlePart + " Usuario";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">
        <div class="header">
            <h2><strong>Usuarios Registrados</strong></h2>
        </div>
        <div class="body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        <div class="col-6">
                            <label class="control-label ">Nombre</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.firstname, new { @class = "form-control text-capitalize", maxlength = "100", required = "required" })
                                @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-6">
                            <label for="example-date-input">Apellido</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.lastname, new { @class = "form-control text-capitalize", maxlength = "100", required = "required" })
                                @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label class="control-label ">Correo Electronico</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", Type = "email", maxlength = "100", required = "required" })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-6">
                            <label for="example-date-input">Telefono</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control", maxlength = "100", required = "required" })
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label for="example-date-input">Nombre de usuario</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.username, new { @class = "form-control", maxlength = "100", required = "required" })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-6">
                            <label class="control-label ">Contraseña</label>
                            <div class="col-md-10">
                                @if (Model == null)
                                {
                                    @Html.TextBoxFor(model => model.password, new { @class = "form-control", type = "password", maxlength = "100", required = "required", value = "", id = "password", autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" }) }
                                else
                                {
                                    @Html.TextBoxFor(model => model.password, new { @class = "form-control", type = "password", maxlength = "100", value = "", placeholder = "Ingrese para modificar", id = "password", autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label for="example-date-input">Perfil</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.id_role,
                                new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "System Administrator", Value="1"},
                                    new SelectListItem { Text = "Funcionario", Value = "2" },
                                    new SelectListItem { Text = "Representante", Value = "3" },
                                },
                                "Seleccione...", new { @class = "form-control", maxlength = "100" })
                                @Html.ValidationMessageFor(model => model.id_role, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-6">
                            <label class="control-label ">Estado</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.status,
                                        new List<SelectListItem>
                                        {
                                        new SelectListItem{Text="Activo", Value="1"},
                                        new SelectListItem { Text = "Inactivo", Value = "0" }},
                                        "Seleccione...", new { @class = "form-control", maxlength = "100" })
                                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="w-100 pt-4 d-flex justify-content-center align-items-end">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
             }
        </div>
    </div>
</div>
