
@{
    Layout = "~/Views/Shared/_LT_Login.cshtml";
 }

<div class="d-lg-flex half">
    <a href="~/Home" class="btn btn-link text-decoration-none text-muted mr-2 back-link font-weight-light" ><i class="fas fa-arrow-circle-left mr-1"></i> Volver</a>
    <div class="bg order-1 order-md-2" style="background-image: url('~/Content/Assets/Login/images/login1.png');">
        <div> </div>
    </div>
    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">

                <div class="col-md-7">

                    <table align="center">
                        <tr>
                            <td align="center" style="padding-bottom: 50px; ">
                                <img align="middle" src="~/Content/Assets/Login/images/logo-1.png" style="width: 40%" align="center">
                            </td>
                        </tr>
                    </table>

                    <h3 class="text-primary text-center my-2"> <strong>Iniciar Sesión</strong> <br><br> </h3>

                    @using (Html.BeginForm("Login", "Signin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group first">
                            <label for="username" class="text-muted">Usuario</label>
                            <input type="text" class="form-control" placeholder="Introduzca su nombre de usuario" id="username">
                        </div>
                        <div class="form-group last mb-3">
                            <label for="password" class="text-muted">Contraseña</label>
                            <input type="password" class="form-control" placeholder="Introduzca su contraseña" id="password">
                        </div>
                        <div class="d-flex my-4 align-items-center">
                            <label class="control control--checkbox mb-0">
                                <span class="caption">Recuérdame</span>
                                <input type="checkbox" />
                                <div class="control__indicator"></div>
                            </label>
                            <span class="ml-auto"><a href="#" class="forgot-pass">¿Olvidaste tu contraseña?</a></span>
                        </div>
                        <input type="submit" value="Ingresar" class="btn btn-block btn-primary" style="background: #23D0DE;">

                        <div class="d-flex justify-content-between align-items-center py-3">
                            ¿Aún no tienes una cuenta?
                            <a href="~/Signup" class="forgot-pass m-0">¡Regístrate Ahora!</a>
                        </div>
                     }

                </div>
            </div>
        </div>
    </div>
</div>
